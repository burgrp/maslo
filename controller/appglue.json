{
    "configuration": {
        "module": "./configuration.js",
        "configFile": "-> $.CONFIG_FILE || './config.json'"
    },
    "machine": {
        "module": "./machine.js",
        "drivers": {
            "virtual": {
                "module": "./driver-virtual.js",
                "motors": {
                    "a": {
                        "steps": 1000
                    },
                    "b": {
                        "steps": -4000
                    },
                    "z": {
                        "steps": 100
                    }
                }
            },
            "i2c": {
                "module": "./driver-i2c.js",
                "bus": "-> $.I2C",
                "motors": {
                    "a": {
                        "address": 81,
                        "motorPolarity": 1,
                        "encoderPolarity": -1
                    },
                    "b": {
                        "address": 82,
                        "motorPolarity": -1,
                        "encoderPolarity": 1
                    },
                    "z": {
                        "address": 80,
                        "motorPolarity": 1,
                        "encoderPolarity": 1
                    }
                }
            }
        },
        "driver": "-> $.MACHINE_DRIVER || 'virtual'",
        "configuration": "-> configuration",
        "checkIntervalMs": 50,
        "geometry": {
            "beam": {
                "motorsDistanceMm": 3402,
                "motorsToWorkspaceMm": 708    
            },
            "workspace": {
                "widthMm": 2500,
                "heightMm": 1250
            },
            "sled": {
                "diaMm": 400
            }
        },
        "motors": {
            "a": {
                "maxRpm": 7800,
                "encoderPpr": "-> 17*4",
                "gearRatio": 280,
                "mmPerRev": 60,
                "offsetToDuty": 0.3
            },
            "b": {
                "maxRpm": 7800,
                "encoderPpr": "-> 17*4",
                "gearRatio": 280,
                "mmPerRev": 60,
                "offsetToDuty": 0.3
            },
            "z": {
                "maxRpm": 9900,
                "encoderPpr": "-> 11*4",
                "gearRatio": 90,
                "mmPerRev": 2,
                "offsetToDuty": -0.5
            }
        },
        "relays": {
            "spindle": {},
            "hoover": {}
        }
    },
    "router": {
        "module": "./router.js",
        "machine": "-> machine"
    },
    "webserver": {
        "module": "@burgrp/webglue",
        "modules": [
            {
                "module": "./ui.js",
                "machine": "-> machine",
                "router": "-> router",
                "manualCuttingSpeedMmPerMin": 200,
                "manualRapidSpeedMmPerMin": 1000,           
                "manualMotorControl": {
                    "a": {
                        "min": 0.6,
                        "max": 1
                    },
                    "b": {
                        "min": 0.6,
                        "max": 1
                    },
                    "z": {
                        "min": 0.6,
                        "max": 0.9
                    }
                }        
            }
        ]
    },
    "positionSave": {
        "module": "./position-save.js",
        "machine": "-> machine",
        "configuration": "-> configuration"
    }
}